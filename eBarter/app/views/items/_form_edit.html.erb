<%= form_tag("/edit_item") do %>
  <p>
    <%= label_tag :Nome %><br>
    <%= text_field_tag :nome, @item.nome %>
  </p>

	<p>
    <%= label_tag :descricao %><br>
    <%= text_field_tag :descricao, @item.descricao %>
  </p>

	<p>
    <%= label_tag :quantidade %><br>
    <%= text_field_tag :quantidade, @item.quantidade %>
  </p>
  <%= hidden_field_tag :id, @item.id %>
  <p>
    <% if flash[:error] %>
			<%= flash[:error]%>
      <% flash[:error] = nil %>
    <% end %>
  </p>
  <p>
    <%= submit_tag "Concluir" %>
  </p>
<% end %>
