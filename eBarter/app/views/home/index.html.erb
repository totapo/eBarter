<div class="resultado_pesquisa">
  <% if @itens %>
    <div id="products" class="row list-group">
    <% @itens.each do |item|%>
          <div class="item  col-xs-4 col-lg-4">
              <div class="thumbnail">
                <% if item.img_link %>
                  <%= image_tag(item.img_link, :size => "220x150") %>
                <% else %>
                  <img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="">
                <%end%>
                  <div class="caption">
                      <h4 class="group inner list-group-item-heading">
                          <%= item.nome %></h4>
                      <p class="group inner list-group-item-text">
                          <%= item.descricao %></p>
                      <div class="row">
                          <div class="col-xs-12 col-md-6">
                              <p class="lead">
                                  <%= item.quantidade %></p>
                          </div>
                          <div class="col-xs-12 col-md-6">
                              <%= link_to 'Visualizar Item', item_path(id: item.id), :class=>"btn btn-success" %>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
    <% end %>
    </div>
  <% end %>
</div>
