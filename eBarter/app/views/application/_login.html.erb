<div class="container">
  <div class="row">
   <div class="col-md-4 col-md-offset-4">
      <div class="center">
       <div class="panel panel-default", id="pnlLogin">
         <div class="panel-heading">
           <h2 class="panel-title">Please log in</h2>
         </div>
         <div class="panel-body">
            <%= form_tag("/login") do %>
              <div class="form-group">
                <%= text_field_tag :email,"", class:"form-control", placeholder: "Enter email", required: true%>
              </div>
              <div class="form-group">
                <%= password_field_tag :senha,"", class:"form-control", placeholder: "Enter password", required: true%>
              </div>
              <% if flash[:error] %>
                <%= flash[:error]%>
                <% flash[:error] = nil %>
              <% end %>
              <%= button_tag "Login", type:"submit", class:"btn btn-lg btn-primary btn-block" %>
            <% end %>
          </div>
        </div>
      </div>
      </div>
    </div>
</div>
