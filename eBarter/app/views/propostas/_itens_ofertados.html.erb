<%if @itens_ofertados %>
  <div id="itens" class="row list-group">
  <%  @itens_ofertados.each do |item| %>
    <%= form_tag("/remover_item_proposta") do %>
      <div class="item  list-group-item">
          <div class="thumbnail">
            <% if item.img_link %>
              <%= image_tag(item.img_link, :size => "260x180") %></li>
            <% else %>
              <img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="">
            <%end%>

              <%= hidden_field_tag 'id_item', item.id %>
              <div class="caption">
                  <h4 class="group inner list-group-item-heading">
                      <%= item.nome %></h4>
                  <p class="group inner list-group-item-text">
                      <%= item.descricao %></p>
                  <p class="group inner list-group-item-text">
                    <%= item.categoria.nome %></p>
                  <div class="row">
                      <div class="col-xs-12 col-md-6">
                          <p class="lead">
                              <%=session[:quantidade_ofertados]["#{item.id}"]%>/<%= item.quantidade %></p>
                      </div>
                      <div class="col-xs-12 col-md-6">
                          <%= submit_tag 'Excluir', :class=>"btn btn-danger" %>
                      </div>
                  </div>
                  <%= hidden_field_tag 'id_item', item.id %>
                  <%end%>
                  <div class="row">
                    <%= form_tag("/alterar_quantidade_item_proposta", :class=>"group inner list-group-item-text") do %>
                        <%= hidden_field_tag 'id_item', item.id %>
                        <%= text_field_tag :quantidade, session[:quantidade_ofertados]["#{item.id}"] %><br>
                        <%= submit_tag 'Alterar Quantidade' %></li>
                    <% end %>
                  </div>
              </div>
          </div>
      </div>
  <% end %>
<% end %>
