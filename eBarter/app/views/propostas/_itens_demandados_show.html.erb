<%if @itens_demandados %>
<div id="products" class="row list-group">
  <%  @itens_demandados.each do |item| %>

        <div class="item  list-group-item">
            <div class="thumbnail">
              <div class="row">
                <div class="col-sm-2">
                  <% if item.img_link %>
                    <%= image_tag(item.img_link, :size => "160x160") %>
                  <% else %>
                    <img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="">
                  <%end%>
                </div>
                <div class="col-sm-10">
                  <div class="caption">
                      <h4 class="group inner list-group-item-heading">
                          <%= item.nome %></h4>
                      <p class="group inner list-group-item-text">
                          <%= item.descricao %></p>
                      <p class="group inner list-group-item-text">Categoria:
                          <%= item.categoria.nome%>
                      </p>
                      <div class="row">
                          <div class="col-xs-12 col-md-12">
                              <p class="lead">
                                  <%=item.envolve.where(proposta_id:@proposta.id, item_id:item.id)[0].quantidade%>/<%= item.quantidade %></p>
                          </div>
                      </div>
                  </div>
                </div>
              </div>


            </div>
        </div>
  <% end %>
</div>
<% end %>
