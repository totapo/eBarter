<%if @itens %>
<div id="itens" class="row list-group">
  <% @itens.each do |item| %>
    <%= form_tag("/adicionar_item_proposta") do %>
    <div class="item  list-group-item">
        <div class="thumbnail">
          <% if item.img_link %>
            <%= image_tag(item.img_link, :size => "260x180") %></li>
          <% else %>
            <img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="">
          <%end%>

            <%= hidden_field_tag 'id_item', item.id %>
            <div class="caption">
                <h4 class="group inner list-group-item-heading">
                    <%= item.nome %></h4>
                <p class="group inner list-group-item-text">
                    <%= item.descricao %></p>
                <p class="group inner list-group-item-text">
                  <%= item.categoria.nome %></p>
                <div class="row">
                    <div class="col-xs-12 col-md-6">
                        <p class="lead">
                            <%= item.quantidade %></p>
                    </div>
                    <div class="col-xs-12 col-md-6">
                        <%= submit_tag 'Adicionar a Proposta',:class=>"btn btn-primary" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% end %>
  <% end %>
</div>
<% end %>
