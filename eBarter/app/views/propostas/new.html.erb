<h1>Nova Proposta</h1>
<%= @id_item %>
<div>
    <%= form_tag("/propostas") do %>
      <%= label_tag :lbl_texto, "Texto adicional:" %><br>
      <%= text_area_tag :texto %><br>
      <% if session[:contra_proposta] %>
        <%= hidden_field_tag 'contra_proposta', true %>
        <%= hidden_field_tag 'id', session[:id] %>
        <%= submit_tag 'Concluir Contra Proposta', :class=>"btn btn-success", contra_proposta:true%>
      <% else %>
        <%= submit_tag 'Concluir Proposta', :class=>"btn btn-success",contra_proposta: false %>
      <% end %>
    <% end %>
</div>
