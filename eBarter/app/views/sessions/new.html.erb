<%= form_tag("/login") do %>
  <p>
    <%= label_tag :email, "E-mail" %><br>
    <%= text_field_tag :email %>
  </p>

  <p>
    <%= label_tag :Senha %><br>
    <%= password_field_tag :senha %>
  </p>
    <% if flash[:error] %>
      <%= flash[:error]%>
      <% flash[:error] = nil %>
    <% end %>
    <br>
    <%= submit_tag "Entrar" %>
  </p>
<% end %>
